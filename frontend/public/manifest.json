{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Whitelist and auto-close inactive tabs.",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "scripting",
    "activeTab"
  ]
}